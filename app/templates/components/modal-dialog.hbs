  <div class="actions">
    <div class="ui positive right labeled icon button" {{action "saveChanges"}}>
      Сохранить
      <i class="checkmark icon"></i>
    </div>
    <div class="ui negative deny button" {{action "cancelChanges"}}>
      Отмена
    </div>
  </div>
  /if}}-->
</div>
